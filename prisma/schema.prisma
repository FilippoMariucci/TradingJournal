generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trade {
  id            Int       @id @default(autoincrement())
  importOrder   Int
  tradeNumber   Int?
  date          DateTime?
  dayOfWeek     String?
  currencyPair  String?
  positionType  String?
  openTime      String?
  groupType     String?
  result        String?
  amount        Float?
  riskReward    Float?
  pnl           Float?
  equity        Float?
  notes         String?
  numericResult Int?

  // Extra trading fields
  ticker        String?
  type          String?
  entryDate     DateTime?
  entryPrice    Float?
  quantity      Int?
  exitDate      DateTime?
  exitPrice     Float?

  createdAt     DateTime  @default(now())
}

model Settings {
  id            Int     @id @default(autoincrement())
  initialBudget Float   @default(700)
}
